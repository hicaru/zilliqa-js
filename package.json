  "description": "Zilliqa blockchain implementation on javascript.",
  "main": "index.ts",
  "types": "typings/index.d.ts",
  "typings": "typings/index.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npx ts-node --project tsconfig.json index.ts",
