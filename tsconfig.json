{
    "compilerOptions": {
      "baseUrl": "./",
      "rootDir": "./",
      "incremental": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "strict": true,
      "noImplicitReturns": true,
      "moduleResolution": "node",
      "stripInternal": false,
      "noEmit": true,
      "allowSyntheticDefaultImports": true,
      "lib": [
        "esnext",
        "dom"
      ],
      "exclude": ["node_modules"],
      "target": "esnext",
      "include": [
        "src",
        "**/*.ts",
        "**/*.tsx"
      ]
    }
  }